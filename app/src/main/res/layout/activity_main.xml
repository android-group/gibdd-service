<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.android_studio.olga.gibdd_servis.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_height="?android:attr/actionBarSize"
        app:titleTextColor="@color/toolbarText"
        app:contentInsetStart="0dp"
        android:gravity="top"
        android:background="@color/toolbarBackground"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="1"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_vertical|center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Выберите сервис"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:gravity="center|center_horizontal"
            android:layout_weight="0.33"
            android:textSize="27sp"
            android:textColor="#00709e"
            android:textStyle="bold"
            android:background="@drawable/edittextstyle"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="146dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Проверка штрафов"
                android:id="@+id/button_fine"
                android:layout_column="0"
                android:layout_weight="1"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Проверка водителя"
                android:id="@+id/button_driver"
                android:layout_column="1"
                android:layout_weight="1"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:text="Проверка автомобиля"
                android:id="@+id/button_car"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Прием сообщений"
                android:id="@+id/button_message"
                android:layout_column="1"
                android:layout_weight="1"
                android:textSize="16sp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
